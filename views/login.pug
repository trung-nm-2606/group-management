html
  head
    title
      | Login - Group Management
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Nunito:300,400,500,700&display=swap")
    link(rel="stylesheet", href="https://www.markuptag.com/bootstrap/5/css/bootstrap.min.css")
    link(rel="stylesheet", href="/public/css/login.css")
  body.text-center
    form.form-signin(action = "/login" method = "POST")
      img.login-img.mb-4(src="/public/login_icon.png", alt="")
      h3.mb-4.fw-bold Please login
      if (message)
        p.text-danger #{message}
      label.sr-only(for="email") Email address
      input.form-control(name = "email" type = "email" required placeholder = "Email address")
      label.sr-only(for="password") Password
      input.form-control(name = "password" type = "password" required placeholder = "Password")
      div.d-grid.gap-2.mt-4
        button.btn.btn-primary(type = "submit") Login
        a.mt-2(href="/signup") Create Account
